<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/act_login_name"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="82dp"
        android:ems="10" />

    <EditText
        android:id="@+id/act_login_pswd"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/act_login_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:maxLength="16"
        android:ems="10"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/act_login_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/act_login_register"
        android:layout_alignParentBottom="true"
        android:background="@drawable/login_back" />

    <Button
        android:id="@+id/act_login_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/act_login_back"
        android:layout_centerHorizontal="true"
        android:background="@drawable/login_register" />

    <Button
        android:id="@+id/act_login_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/act_login_register"
        android:layout_alignLeft="@+id/act_login_register"
        android:background="@drawable/login_login" />

    <Button
        android:id="@+id/act_login_autolog"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_above="@+id/act_login_login"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="46dp"
        android:background="@drawable/switch_on" />

    <Button
        android:id="@+id/act_login_remember"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_above="@+id/act_login_autolog"
        android:layout_alignLeft="@+id/act_login_autolog"
        android:layout_marginBottom="28dp"
        android:background="@drawable/switch_on" />

</RelativeLayout>