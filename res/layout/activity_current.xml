<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical" >

        <Button
            android:id="@+id/act_current_btn_countDown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/act_current_btn_startToDo" />

        <Button
            android:id="@+id/act_current_btn_Rcd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/act_current_btn_iWantToRcd" />

        <Button
            android:id="@+id/act_current_btn_mood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/act_current_btn_adjustMood" />
    </LinearLayout>

    <Button
        android:id="@+id/act_current_btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="@string/act_current_btn_back" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/act_current_btn_back"
        android:layout_alignBottom="@+id/act_current_btn_back"
        android:text="@string/act_curr_txtvw_title"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>