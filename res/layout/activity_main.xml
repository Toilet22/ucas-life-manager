<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical" >

        <Button
            android:id="@+id/button1_yester"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/act_main_btn_yesterday" />

        <Button
            android:id="@+id/button2_today"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/act_main_btn_today" />

        <Button
            android:id="@+id/button3_tomorrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/act_main_btn_tomorrow" />

    </LinearLayout>

    <Button
        android:id="@+id/button4_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/act_main_btn_settings" />

    <Button
        android:id="@+id/button5_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="@string/act_main_btn_login" />

</RelativeLayout>
