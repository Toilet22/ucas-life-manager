<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg" >

    <Button
        android:id="@+id/button4_settings"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_alignBaseline="@+id/button5_login"
        android:layout_alignBottom="@+id/button5_login"
        android:layout_alignParentLeft="true"
        android:background="@drawable/main_setting" />

    <Button
        android:id="@+id/button5_login"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/main_login" />
        <Button
            android:id="@+id/button3_tomorrow"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_alignLeft="@+id/button2_today"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:background="@drawable/main_tomorrow" />

        <Button
            android:id="@+id/button1_yester"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/button2_today"
            android:layout_marginLeft="19dp"
            android:background="@drawable/main_yesterday" />
        <Button
            android:id="@+id/button2_today"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_below="@+id/button3_tomorrow"
            android:layout_marginRight="17dp"
            android:layout_toLeftOf="@+id/button5_login"
            android:background="@drawable/main_today" />

</RelativeLayout>
